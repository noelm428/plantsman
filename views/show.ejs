  <body>
    <nav>
<%- include("./partials/nav.ejs")%>
    </nav>
    <div class="container">

      <div class="card" style="width: 50rem;">
          <h1><%=plant.name;%></h1>
        <li><img id="img"src="<%=plant.img%>"class="card-img-top" alt="img"></li>
        <div class="card-body">
        <h2>Care:</h2><p><%=plant.care%></p>


        </div>
       <h2>You have <%=plant.qty%> in your collection</h2>
       <form action="/plants/<%=plant._id%>?_method=DELETE" method="POST">
        <input type="submit"  value="DELETE" class="btn btn-warning">
        </form>
        <a href="/plants/<%=plant._id%>/edit">Edit</a>





    </div>


